<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mywordbook"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/addwbook" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:theme="@style/AppTheme" android:name=".WbFragment" android:launchMode="standard" android:label="@string/wordbook"></activity>
   		<activity android:theme="@style/AppTheme" android:name=".LwFragment" android:launchMode="standard" android:label="@string/learnnewword"></activity>
   		<activity android:theme="@style/AppTheme" android:name=".MoreFragment" android:launchMode="standard" android:label="@string/more"></activity>
   		<activity android:theme="@style/AppTheme" android:name=".TestFragment" android:launchMode="standard" android:label="@string/test"></activity>
   		<activity android:theme="@style/AppTheme" android:name=".SearchFragment" android:launchMode="standard" android:label="@string/search"></activity>
        </application>

</manifest>
